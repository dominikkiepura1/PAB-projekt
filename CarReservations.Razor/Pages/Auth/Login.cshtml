@page
@model CarReservations.Razor.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 400px; width: 100%;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Zaloguj się</h3>

            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="LoginData.Username" class="form-label">Użytkownik</label>
                    <input asp-for="LoginData.Username" class="form-control form-control-lg" />
                    <span asp-validation-for="LoginData.Username" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="LoginData.Password" class="form-label">Hasło</label>
                    <input asp-for="LoginData.Password" type="password" class="form-control form-control-lg" />
                    <span asp-validation-for="LoginData.Password" class="text-danger small"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger py-2" role="alert">
                        @Model.ErrorMessage
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100">Zaloguj</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
